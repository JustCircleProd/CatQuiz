<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/developers_and_licenses_developers_project_info_margin_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/project_name_version_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text_color"
        android:textSize="@dimen/developers_and_licenses_developers_project_project_name_version_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/project_info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text_color"
        android:textSize="@dimen/developers_and_licenses_developers_project_project_info_text_size" />

</LinearLayout>